<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="clober">

  <xacro:include filename="$(find clober_description)/urdf/include/tim571.urdf.xacro"/>

  <xacro:property name="PI" value="3.1415926535897931"/>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5707963267948966"/>
      <geometry>
        <mesh filename="package://clober_description/meshes/clober.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 1.5707963267948966"/>
      <geometry>
        <mesh filename="package://clober_description/meshes/clober_collision.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0.0018 0.1558 0.019" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 -1.5707963267948966"/>
      <geometry>
        <mesh filename="package://clober_description/meshes/wheel.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 -1.5707963267948966"/>
      <geometry>
        <mesh filename="package://clober_description/meshes/wheel.dae"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0.0018 -0.1558 0.019" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5707963267948966"/>
      <geometry>
        <mesh filename="package://clober_description/meshes/wheel.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 1.5707963267948966"/>
      <geometry>
        <mesh filename="package://clober_description/meshes/wheel.dae"/>
      </geometry>
    </collision>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0605 0 0.0923" rpy="0 0 0"/>
  </joint>

  <link name="imu_link"/>

  <joint name="left_ultrasonic_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_ultrasonic"/>
    <origin xyz="0.18164 0.09679 0.08396" rpy="0 0 0"/>
  </joint>

  <link name="left_ultrasonic"/>

  <joint name="right_ultrasonic_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_ultrasonic"/>
    <origin xyz="0.18164 -0.09679 0.08396" rpy="0 0 0"/>
  </joint>

  <link name="right_ultrasonic"/>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0.159 0 0.2265" rpy="0 0 0"/>
  </joint>

  <link name="laser_link"/>

