<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find clober_navigation)/maps/map.yaml"/>
  <arg name="model" default=""/>
  <arg name="initial_pose_x" value=" 0.0"/>
  <arg name="initial_pose_y" value=" 0.0"/>
  <arg name="initial_pose_z" value=" 0.0"/>  
  <arg name="initial_pose_a" value=" 0.0"/>
  <arg name="open_rviz" default="true"/>

  <!-- Map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find clober_navigation)/launch/amcl.launch">
    <arg name="odom_frame" value="$(arg model)/odom"/>
    <arg name="base_frame" value="$(arg model)/base_link"/>
    <arg name="initial_pose_x" value=" 0.0"/>
    <arg name="initial_pose_y" value=" 0.0"/>
    <arg name="initial_pose_z" value=" 0.0"/>  
    <arg name="initial_pose_a" value=" 0.0"/>
  </include>

  <!-- move_base -->
  <include file="$(find clober_navigation)/launch/move_base.launch">
    <arg name="base_frame" default="$(arg model)/base_link"/>
    <arg name="scan_frame" default="$(arg model)/scan"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)">
    <include file="$(find clober_description)/launch/rviz.launch"/>
  </group>
</launch>